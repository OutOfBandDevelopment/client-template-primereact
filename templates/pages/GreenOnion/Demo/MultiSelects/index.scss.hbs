.demo-ui-page {
  .p-panel {
    margin-bottom: 1rem;

    .p-panel-header {
      background: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
    }
  }

  .field {
    margin-bottom: 0.5rem;

    label {
      display: block;
      margin-bottom: 0.25rem;
      font-weight: 500;
      color: #495057;
    }
  }

  pre {
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.875rem;
  }

  .p-multiselect {
    width: 100%;
  }
}
