.demo-ui-page {
  .p-panel {
    margin-bottom: 1rem;

    .p-panel-header {
      background: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
    }
  }

  .p-tabview {
    .p-tabview-nav {
      background: #ffffff;
      border-bottom: 2px solid #dee2e6;
    }

    .p-tabview-panels {
      background: #ffffff;
      padding: 1rem;
    }
  }

  .field {
    margin-bottom: 1rem;

    label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 500;
      color: #495057;
    }
  }

  .editor-grid {
    display: grid;
    gap: 1rem;

    &.cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }

    &.cols-3 {
      grid-template-columns: repeat(3, 1fr);
    }
  }
}
